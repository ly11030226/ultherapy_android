<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    tools:context=".ui.UserRecordFragment">

    <TextView
        android:id="@+id/tv_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="64dp"
        android:text="@string/user_information"
        android:textColor="@color/register_title_text"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_record_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="64dp"
        android:paddingEnd="64dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_title">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_record_user_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="29dp"
                    android:background="@drawable/info_user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Name"
                    android:textColor="@color/register_content_text"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/user_manager_detail_padding"
                android:paddingBottom="@dimen/user_manager_detail_padding"
                android:textColor="@color/user_manager_text"
                android:textSize="30sp"
                tools:text="David hadasadfsd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_record_user_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="29dp"
                    android:background="@drawable/info_gender"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Gender"
                    android:textColor="@color/register_content_text"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/user_manager_detail_padding"
                android:paddingBottom="@dimen/user_manager_detail_padding"
                android:textColor="@color/user_manager_text"
                android:textSize="30sp"
                tools:text="Female" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_record_user_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="32dp"
                    android:background="@drawable/info_birth"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Birthday"
                    android:textColor="@color/register_content_text"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/user_manager_detail_padding"
                android:paddingBottom="@dimen/user_manager_detail_padding"
                android:textColor="@color/user_manager_text"
                android:textSize="30sp"
                tools:text="2014/10/10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_record_user_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="32dp"
                    android:background="@drawable/info_telephone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Telephone"
                    android:textColor="@color/register_content_text"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/user_manager_detail_padding"
                android:paddingBottom="@dimen/user_manager_detail_padding"
                android:textColor="@color/user_manager_text"
                android:textSize="30sp"
                tools:text="1314141134" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_record_user_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="29dp"
                    android:background="@drawable/info_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Email"
                    android:textColor="@color/register_content_text"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_record_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/user_manager_detail_padding"
                android:paddingBottom="@dimen/user_manager_detail_padding"
                android:textColor="@color/user_manager_text"
                android:textSize="30sp"
                tools:text="XXXXXXXXXXX" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_record_user_bg"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_record_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                style="@style/style_show_users_main_title"
                android:text="CreateTime"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:layout_weight="1.5"
                android:text="Name"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:layout_weight="1.3"
                android:text="Telephone"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:text="Therapist"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:text="Knife"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:layout_weight="0.7"
                android:text="Number"
                android:textColor="@color/register_content_text" />

            <TextView
                style="@style/style_show_users_main_title"
                android:layout_weight="0.5"
                android:text="" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>