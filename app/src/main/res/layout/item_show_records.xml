<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/item_show_record_date"
        style="@style/style_show_users_main_title"
        tools:text="2013/01/10" />

    <TextView
        android:id="@+id/item_show_record_name"
        style="@style/style_show_users_main_title"
        android:layout_weight="1.5"
        android:lines="1"
        android:ellipsize="end"
        tools:text="asjdflaskdjfklasdasdfsdsdfsdfsdffjflksa" />

    <TextView
        android:id="@+id/item_show_record_telephone"
        style="@style/style_show_users_main_title"
        android:layout_weight="1.3"
        android:ellipsize="middle"
        android:lines="1"
        tools:text="235235235sdfsdfsadfsdfsdf23" />

    <TextView
        android:id="@+id/item_show_record_therapist"
        style="@style/style_show_users_main_title"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        tools:text="admin" />

    <TextView
        android:id="@+id/item_show_record_knife"
        style="@style/style_show_users_main_title"
        android:ellipsize="middle"
        android:lines="1"
        tools:text="BOOSTER-2.0" />

    <TextView
        android:id="@+id/item_show_record_number"
        style="@style/style_show_users_main_title"
        android:ellipsize="middle"
        android:layout_weight="0.7"
        android:lines="1"
        tools:text="10000" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_show_record_jump"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/record_jump" />

        <ImageView
            android:id="@+id/item_show_record_delete"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:background="@drawable/show_users_delete" />

    </LinearLayout>

</LinearLayout>