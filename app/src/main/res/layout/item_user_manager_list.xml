<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_user_manager_list_profile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/icon_female"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_manager_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/user_manager_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_manager_list_telephone"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_manager_list_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="asdfjoiasdjfiosadjf" />

    <TextView
        android:id="@+id/tv_user_manager_list_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/user_manager_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_manager_list_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_manager_list_name"
        tools:text="23523523525" />


    <TextView
        android:id="@+id/tv_user_manager_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/user_manager_text"
        android:textSize="30sp"
        android:paddingEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_manager_list_therapist"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="asdfjoiasdjfiosadjf" />

    <TextView
        android:paddingEnd="32dp"
        android:id="@+id/tv_user_manager_list_therapist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/user_manager_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_manager_list_date"
        tools:text="23523523525" />


</androidx.constraintlayout.widget.ConstraintLayout>